package methode;

import objet.Objet;

public class Arbre {
    private Float valeur;
    private Arbre fg; //fils supérieur
    private Arbre fd;//fils inférieure
    private int profondeur;
    private Arbre pere;
    private Float poids;
    private int idx;

    //Arbre vide
    public Arbre() {
        this.fg = null;
        this.fd = null;
        this.valeur = null;
        this.profondeur = 0;
        this.pere = null;
        this.poids=null;
    }

    public Arbre(Float poids, Arbre pere, int idx, Float valeur) {
        this.poids = poids;
        this.valeur = valeur;
        this.profondeur = pere.profondeur + 1;
        this.idx = idx;
        this.pere = pere;
    }


     public void insertion(Objet objet, int idx) {
        if (this.valeur == null){
            this.valeur =objet.getPrix();
            this.fg = new Arbre();
            this.fd = new Arbre();
        }else{
            if (this.valeur <= objet.getRapport() ){
                this.fg.insertion(objet.getPoids());
            }else{
                this.fd.insertion(objet.getRapport());
            }
        }
    }
    public Arbre getFd() {
        return fd;
    }

    public Arbre getFg() {
        return fg;
    }

    public int getProfondeur() {
        return profondeur;
    }

}

